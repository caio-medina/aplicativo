<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.activity.activity.activity.Cadastro"
    android:background="#61e6d0"
    android:id="@+id/Tela_cadastro"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="28dp"
        android:textColor="@color/abc_search_url_text_selected"
        android:id="@+id/TextView_cadastro"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/ed_Cadastro_nome"
        android:layout_toLeftOf="@+id/ed_Cadastro_nome"
        android:layout_toStartOf="@+id/ed_Cadastro_nome"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:textSize="20dp"
        android:textColor="@color/abc_search_url_text_selected"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed_Cadastro_nome"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/TextView_cadastro"
        android:layout_alignLeft="@+id/TextView_cadastro"
        android:layout_alignStart="@+id/TextView_cadastro"
        android:layout_alignRight="@+id/TextView_cadastro"
        android:layout_alignEnd="@+id/TextView_cadastro"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed_Cadastro_email"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ed_Cadastro_nome"
        android:layout_alignStart="@+id/ed_Cadastro_nome"
        android:layout_toStartOf="@+id/button2"
        android:layout_alignRight="@+id/ed_Cadastro_nome"
        android:layout_alignEnd="@+id/ed_Cadastro_nome"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ed_Cadastro_senha"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/ed_Cadastro_email"
        android:layout_alignStart="@+id/ed_Cadastro_email"
        android:layout_alignRight="@+id/ed_Cadastro_email"
        android:layout_alignEnd="@+id/ed_Cadastro_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/ed_Cadastro_email"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="20dp"
        android:textColor="@color/abc_search_url_text_selected"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:id="@+id/bt_cadastro_confirmar"
        android:textSize="8dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/ed_Cadastro_senha"
        android:layout_alignStart="@+id/ed_Cadastro_senha"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="37dp"
        android:textSize="20dp"
        android:textColor="@color/abc_search_url_text_selected"/>

</RelativeLayout>
